<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Widget.Gusteau.CardView"
    app:cardBackgroundColor="@color/gray_50"
    app:strokeColor="@color/gray_100"
    app:strokeWidth="@dimen/stroke_width_thin"
    app:cardElevation="0dp"
    app:contentPadding="@dimen/spacing_normal"
    android:layout_marginBottom="@dimen/spacing_medium">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_step_number"
            android:layout_width="@dimen/avatar_size_small"
            android:layout_height="@dimen/avatar_size_small"
            android:background="@drawable/shape_circle_primary"
            android:gravity="center"
            android:textColor="@color/white"
            style="@style/TextAppearance.Gusteau.Body1.Bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1"/>

        <TextView
            android:id="@+id/tv_step_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Gusteau.Body2"
            android:layout_marginStart="@dimen/spacing_normal"
            app:layout_constraintStart_toEndOf="@+id/tv_step_number"
            app:layout_constraintTop_toTopOf="@id/tv_step_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Combine flour, yeast, and warm water. Knead for 10 minutes until smooth and elastic."/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>