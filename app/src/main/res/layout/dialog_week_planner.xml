<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/plandialogtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Meal Plan"
                android:textAppearance="@style/TextAppearance.Gusteau.Headline2"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select day and meal type"
                android:textAppearance="@style/TextAppearance.Gusteau.Body2"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Day"
                android:textAppearance="@style/TextAppearance.Gusteau.Body1.Bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupDays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:chipSpacing="8dp"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meal Type"
                android:textAppearance="@style/TextAppearance.Gusteau.Body1.Bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupMealTypes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:chipSpacing="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipBreakfast"
                    style="@style/Widget.Gusteau.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Breakfast" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipLunch"
                    style="@style/Widget.Gusteau.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lunch" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipDinner"
                    style="@style/Widget.Gusteau.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dinner" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSnack"
                    style="@style/Widget.Gusteau.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Snack" />
            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>
    </ScrollView>
</com.google.android.material.card.MaterialCardView>