<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/Widget.Gusteau.Toolbar"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:paddingTop="@dimen/spacing_xlarge"
        android:paddingHorizontal="@dimen/spacing_normal"
        app:title="@string/meal_details"
        app:titleTextAppearance="@style/TextAppearance.Gusteau.Title"
        app:titleCentered="true"
        android:background="@drawable/bg_gradient_header"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/svContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/spacing_normal"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/spacing_medium"
            android:paddingBottom="@dimen/spacing_large">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivMealImage"
                android:layout_width="0dp"
                android:layout_height="@dimen/image_header_height"
                android:layout_marginHorizontal="@dimen/spacing_normal"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                style="@style/Widget.Gusteau.ImageView.Rounded"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_xlarge"
                android:text="Classic Margherita Pizza"
                style="@style/TextAppearance.Gusteau.Headline1"
                app:layout_constraintTop_toBottomOf="@id/ivMealImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/llTags"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_medium"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                app:layout_constraintStart_toStartOf="@id/tvTitle"
                app:layout_constraintEnd_toEndOf="@id/tvTitle">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCountry"
                    style="@style/Widget.Gusteau.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Italy"
                    app:chipIcon="@android:drawable/ic_menu_mapmode"
                    app:chipIconTint="@color/primary"
                    android:textColor="@color/primary"
                    app:chipBackgroundColor="@color/primary_10"
                    app:chipStrokeWidth="1dp"
                    app:chipStrokeColor="@color/primary_20"
                    android:layout_marginEnd="@dimen/spacing_small"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCategory"
                    style="@style/Widget.Gusteau.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    app:chipIcon="@android:drawable/ic_menu_recent_history"
                    app:chipIconTint="@color/text_primary_light"
                    android:textColor="@color/text_primary_light"
                    app:chipBackgroundColor="@color/gray_100"
                    app:chipStrokeWidth="0dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvIngredientsHeader"
                style="@style/TextAppearance.Gusteau.Headline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredients"
                android:layout_marginTop="@dimen/spacing_xlarge"
                app:layout_constraintTop_toBottomOf="@id/llTags"
                app:layout_constraintStart_toStartOf="@id/tvTitle"/>

            <HorizontalScrollView
                android:id="@+id/hsvIngredients"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:clipToPadding="false"
                android:paddingHorizontal="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_normal"
                app:layout_constraintTop_toBottomOf="@id/tvIngredientsHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/ingredient_circle_min_width"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="@dimen/spacing_small">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="@dimen/ingredient_circle_size"
                            android:layout_height="@dimen/ingredient_circle_size"
                            android:background="@color/gray_100"
                            android:padding="2dp"
                            app:strokeColor="@color/white"
                            app:strokeWidth="@dimen/stroke_width_medium"
                            style="@style/Widget.Gusteau.ImageView.Circular"
                            android:src="@drawable/ic_launcher_foreground"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Flour"
                            android:layout_marginTop="@dimen/spacing_xsmall"
                            style="@style/TextAppearance.Gusteau.Caption.Bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/ingredient_circle_min_width"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="@dimen/ingredient_circle_size"
                            android:layout_height="@dimen/ingredient_circle_size"
                            android:background="@color/gray_100"
                            style="@style/Widget.Gusteau.ImageView.Circular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tomato"
                            android:layout_marginTop="@dimen/spacing_xsmall"
                            style="@style/TextAppearance.Gusteau.Caption.Bold"/>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/tvVideoHeader"
                style="@style/TextAppearance.Gusteau.Headline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tutorial Video"
                android:layout_marginTop="@dimen/spacing_xxlarge"
                app:layout_constraintTop_toBottomOf="@id/hsvIngredients"
                app:layout_constraintStart_toStartOf="@id/tvTitle"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvVideo"
                style="@style/Widget.Gusteau.CardView"
                android:layout_width="0dp"
                android:layout_height="@dimen/image_banner_height"
                android:layout_marginTop="@dimen/spacing_normal"
                app:cardBackgroundColor="@color/black"
                app:cardElevation="0dp"
                app:contentPadding="0dp"
                app:layout_constraintTop_toBottomOf="@id/tvVideoHeader"
                app:layout_constraintStart_toStartOf="@id/tvTitle"
                app:layout_constraintEnd_toEndOf="@id/tvTitle">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:scaleType="centerCrop"
                        android:alpha="0.7"
                        android:src="@drawable/ic_launcher_background"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="ContentDescription" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.Gusteau.FloatingActionButton"
                        app:srcCompat="@android:drawable/ic_media_play"
                        app:elevation="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        style="@style/Widget.Gusteau.ProgressBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:progress="30"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvPrepHeader"
                style="@style/TextAppearance.Gusteau.Headline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preparation"
                android:layout_marginTop="@dimen/spacing_xxlarge"
                app:layout_constraintTop_toBottomOf="@id/cvVideo"
                app:layout_constraintStart_toStartOf="@id/tvTitle"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStep1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Widget.Gusteau.CardView"
                app:cardBackgroundColor="@color/gray_50"
                app:strokeColor="@color/gray_100"
                app:strokeWidth="@dimen/stroke_width_thin"
                app:cardElevation="0dp"
                app:contentPadding="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_normal"
                app:layout_constraintTop_toBottomOf="@id/tvPrepHeader"
                app:layout_constraintStart_toStartOf="@id/tvTitle"
                app:layout_constraintEnd_toEndOf="@id/tvTitle">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvStep1Number"
                        android:layout_width="@dimen/avatar_size_small"
                        android:layout_height="@dimen/avatar_size_small"
                        android:background="@drawable/shape_circle_primary"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        style="@style/TextAppearance.Gusteau.Body1.Bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tvStep1Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Prepare the Dough"
                        style="@style/TextAppearance.Gusteau.Body1.Bold"
                        android:layout_marginStart="@dimen/spacing_normal"
                        app:layout_constraintStart_toEndOf="@id/tvStep1Number"
                        app:layout_constraintTop_toTopOf="@id/tvStep1Number"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tvStep1Desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Combine flour, yeast, and warm water. Knead for 10 minutes until smooth and elastic."
                        style="@style/TextAppearance.Gusteau.Body2"
                        android:layout_marginTop="@dimen/spacing_xxsmall"
                        app:layout_constraintTop_toBottomOf="@id/tvStep1Title"
                        app:layout_constraintStart_toStartOf="@id/tvStep1Title"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStep2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Widget.Gusteau.CardView"
                app:cardBackgroundColor="@color/gray_50"
                app:strokeColor="@color/gray_100"
                app:strokeWidth="@dimen/stroke_width_thin"
                app:cardElevation="0dp"
                app:contentPadding="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_medium"
                app:layout_constraintTop_toBottomOf="@id/cardStep1"
                app:layout_constraintStart_toStartOf="@id/tvTitle"
                app:layout_constraintEnd_toEndOf="@id/tvTitle">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvStep2Number"
                        android:layout_width="@dimen/avatar_size_small"
                        android:layout_height="@dimen/avatar_size_small"
                        android:background="@drawable/shape_circle_primary"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/white"
                        style="@style/TextAppearance.Gusteau.Body1.Bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tvStep2Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Make the Sauce"
                        style="@style/TextAppearance.Gusteau.Body1.Bold"
                        android:layout_marginStart="@dimen/spacing_normal"
                        app:layout_constraintStart_toEndOf="@id/tvStep2Number"
                        app:layout_constraintTop_toTopOf="@id/tvStep2Number"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tvStep2Desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Crush San Marzano tomatoes with a pinch of salt and a drizzle of extra virgin olive oil."
                        style="@style/TextAppearance.Gusteau.Body2"
                        android:layout_marginTop="@dimen/spacing_xxsmall"
                        app:layout_constraintTop_toBottomOf="@id/tvStep2Title"
                        app:layout_constraintStart_toStartOf="@id/tvStep2Title"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/llFabContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_normal"
            style="@style/Widget.Gusteau.FloatingActionButton.Secondary"
            app:srcCompat="@android:drawable/ic_menu_my_calendar"
            app:elevation="0dp"
            app:fabSize="normal" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Gusteau.FloatingActionButton"
            app:srcCompat="@android:drawable/star_on"
            app:elevation="0dp"
            app:fabSize="normal"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>