<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/Widget.Gusteau.Toolbar"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:paddingTop="@dimen/spacing_xlarge"
        android:paddingHorizontal="@dimen/spacing_normal"
        app:title="@string/meal_details"
        app:titleTextAppearance="@style/TextAppearance.Gusteau.Title"
        app:titleCentered="true"
        android:background="@drawable/bg_gradient_header"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTint="@color/primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

    <ScrollView
        android:id="@+id/svContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/spacing_xxxlarge"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/spacing_medium"
            android:paddingBottom="@dimen/spacing_large">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivMealImage"
                android:layout_width="0dp"
                android:layout_height="@dimen/image_header_height"
                android:layout_marginHorizontal="@dimen/spacing_normal"
                android:scaleType="centerCrop"
                style="@style/Widget.Gusteau.ImageView.Rounded"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:src="@drawable/ic_launcher_background"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_xlarge"
                style="@style/TextAppearance.Gusteau.Headline1"
                app:layout_constraintTop_toBottomOf="@id/ivMealImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Classic Margherita Pizza" />

            <LinearLayout
                android:id="@+id/llTags"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_medium"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                app:layout_constraintStart_toStartOf="@id/tvTitle"
                app:layout_constraintEnd_toEndOf="@id/tvTitle">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCountry"
                    style="@style/Widget.Gusteau.Chip.Static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipIcon="@drawable/ic_location"
                    app:chipIconTint="@color/text_secondary_light"
                    android:textColor="@color/text_primary_light"
                    app:chipBackgroundColor="@color/gray_100"
                    app:chipStrokeWidth="1dp"
                    app:chipStrokeColor="@color/primary_20"
                    android:layout_marginEnd="@dimen/spacing_small"
                    tools:text="Italy"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCategory"
                    style="@style/Widget.Gusteau.Chip.Static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipIcon="@drawable/ic_category"
                    app:chipIconTint="@color/text_secondary_light"
                    android:textColor="@color/text_primary_light"
                    app:chipBackgroundColor="@color/gray_100"
                    app:chipStrokeWidth="0dp"
                    tools:text="Vegetarian"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvIngredientsHeader"
                style="@style/TextAppearance.Gusteau.Headline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ingredients"
                android:layout_marginTop="@dimen/spacing_xlarge"
                app:layout_constraintTop_toBottomOf="@id/llTags"
                app:layout_constraintStart_toStartOf="@id/tvTitle"/>

            <!-- CHANGED: RecyclerView instead of static LinearLayout -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvIngredients"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:clipToPadding="false"
                android:paddingHorizontal="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_normal"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/tvIngredientsHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/item_ingredient" />

            <TextView
                android:id="@+id/tvVideoHeader"
                style="@style/TextAppearance.Gusteau.Headline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tutorial_video"
                android:layout_marginTop="@dimen/spacing_xxlarge"
                app:layout_constraintTop_toBottomOf="@id/rvIngredients"
                app:layout_constraintStart_toStartOf="@id/tvTitle"/>

            <!-- CHANGED: YouTube player instead of card with play button -->
            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/youtube_player_view"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/spacing_normal"
                app:layout_constraintTop_toBottomOf="@id/tvVideoHeader"
                app:layout_constraintStart_toStartOf="@id/tvTitle"
                app:layout_constraintEnd_toEndOf="@id/tvTitle"
                app:autoPlay="false" />

            <TextView
                android:id="@+id/tvPrepHeader"
                style="@style/TextAppearance.Gusteau.Headline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/preparation"
                android:layout_marginTop="@dimen/spacing_xxlarge"
                app:layout_constraintTop_toBottomOf="@id/youtube_player_view"
                app:layout_constraintStart_toStartOf="@id/tvTitle"/>

            <!-- CHANGED: RecyclerView instead of static step cards -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSteps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="@dimen/spacing_normal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/tvPrepHeader"
                app:layout_constraintStart_toStartOf="@id/tvTitle"
                app:layout_constraintEnd_toEndOf="@id/tvTitle"
                tools:listitem="@layout/item_preparation_step"
                tools:itemCount="3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- CHANGED: Better FAB icons -->
    <LinearLayout
        android:id="@+id/llFabContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_normal"
            style="@style/Widget.Gusteau.FloatingActionButton.Secondary"
            app:srcCompat="@drawable/ic_calendar"
            app:fabSize="normal" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Gusteau.FloatingActionButton"
            app:srcCompat="@drawable/ic_favorite_border"
            app:fabSize="normal"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>