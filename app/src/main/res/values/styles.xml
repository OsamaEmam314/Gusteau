<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Gusteau.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:letterSpacing">-0.015</item>
    </style>

    <style name="TextAppearance.Gusteau.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextAppearance.Gusteau.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextAppearance.Gusteau.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:letterSpacing">-0.015</item>
    </style>

    <style name="TextAppearance.Gusteau.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextAppearance.Gusteau.Body1.Bold" parent="TextAppearance.Gusteau.Body1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Gusteau.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_secondary_light</item>
    </style>

    <style name="TextAppearance.Gusteau.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textColor">@color/text_tertiary_light</item>
    </style>

    <style name="TextAppearance.Gusteau.Caption.Bold" parent="TextAppearance.Gusteau.Caption">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Gusteau.Micro" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_size_micro</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextAppearance.Gusteau.Micro.Bold" parent="TextAppearance.Gusteau.Micro">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Gusteau.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.Gusteau.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.Gusteau.Button</item>
        <item name="backgroundTint">@color/primary_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
        <item name="android:minHeight">@dimen/button_height_normal</item>
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:paddingEnd">@dimen/spacing_normal</item>
        <item name="elevation">@dimen/shadow_elevation_small</item>
    </style>

    <style name="Widget.Gusteau.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.Gusteau.Button</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="strokeColor">@color/border_light</item>
        <item name="strokeWidth">@dimen/stroke_width_medium</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
        <item name="android:minHeight">@dimen/button_height_normal</item>
    </style>

    <style name="Widget.Gusteau.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.Gusteau.Button</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:minHeight">@dimen/button_height_medium</item>
    </style>

    <style name="Widget.Gusteau.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/white</item>
        <item name="elevation">@dimen/shadow_elevation_large</item>
    </style>

    <style name="Widget.Gusteau.FloatingActionButton.Secondary" parent="Widget.Gusteau.FloatingActionButton">
        <item name="backgroundTint">@color/surface_light</item>
        <item name="tint">@color/primary</item>
    </style>

    <style name="Widget.Gusteau.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeWidth">@dimen/stroke_width_medium</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_medium</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_medium</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_medium</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_medium</item>
        <item name="hintTextAppearance">@style/TextAppearance.Gusteau.Body2</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.Gusteau.Caption</item>
        <item name="errorTextAppearance">@style/TextAppearance.Gusteau.Caption</item>
    </style>

    <style name="Widget.Gusteau.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/radius_medium</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/surface_light</item>
        <item name="contentPadding">@dimen/spacing_normal</item>
    </style>

    <style name="Widget.Gusteau.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/selector_chip_background</item>
        <item name="android:textColor">@color/selector_chip_text</item>

        <item name="chipStrokeColor">@color/border_light</item>
        <item name="chipStrokeWidth">@dimen/stroke_width_thin</item>

        <item name="chipCornerRadius">@dimen/radius_medium</item>
        <item name="chipMinHeight">@dimen/chip_height</item>
        <item name="android:textAppearance">@style/TextAppearance.Gusteau.Body2</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <style name="Widget.Gusteau.Chip.Static" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/background_light</item>
        <item name="chipStrokeColor">@color/border_light</item>
        <item name="chipStrokeWidth">@dimen/stroke_width_thin</item>
        <item name="android:textColor">@color/text_secondary_light</item>
        <item name="chipCornerRadius">@dimen/radius_medium</item>
        <item name="chipMinHeight">@dimen/chip_height</item>
        <item name="android:textAppearance">@style/TextAppearance.Gusteau.Body2</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:checkable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Widget.Gusteau.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/selector_bottom_nav</item>
        <item name="itemTextColor">@color/selector_bottom_nav</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.Gusteau.Micro.Bold</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.Gusteau.Micro</item>
        <item name="android:background">@color/surface_light</item>
        <item name="elevation">@dimen/shadow_elevation_medium</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="Widget.Gusteau.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/background_light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Gusteau.Title</item>
        <item name="titleTextColor">?attr/colorOnBackground</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Widget.Gusteau.ImageView.Circular" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.Gusteau.ImageView.Rounded" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="cornerSize">@dimen/radius_medium</item>
    </style>

    <style name="ShapeAppearance.Gusteau.Rounded" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">26dp</item>
    </style>

</resources>
